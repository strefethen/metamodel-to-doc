    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program app",
            "program": "${workspaceRoot}/app.js",
            "args": [
                "~/Sites/vapi",
                "./templates/"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "651",
            "program": "${workspaceRoot}/index.js",
            "args": [
                "-t",
                "651",
                "-o",
                "~/Sites/vapi/v6.5.1",
                "-p",
                "./templates/",
                "-s"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Onprem",
            "program": "${workspaceRoot}/index.js",
            "args": [
                "-t",
                "onprem",
                "-o",
                "~/Sites/vapi/v6.7.1",
                "-p",
                "./templates/",
                "-s"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "main",
            "program": "${workspaceRoot}/index.js",
            "args": [
                "-t",
                "main",
                "-o",
                "~/Sites/vapi/main",
                "-p",
                "./templates/",
                "-s"
            ]
        }            
    ]
}