        style.
            body {
                padding-top: 50px;
            }
            .jumbotron .h1, .jumbotron h1 {
                font-size: 48px;
            }
            .starter-template {
                padding: 40px 15px;
                text-align: center;
            }
            .namespace {
                font-size: 12px;
                font-weight: bold;
                color: #959595;
                text-transform: uppercase;
                letter-spacing: 1px;
                content: "Example";
            }
            .topic-abstract {
                font-size: 20px;
                font-weight: 300;
            }
            .eyebrow {
                padding-top: 10px;
                color: #666;
                font-size: 20px;
                font-weight: 400;
            }
            .code-listing {
                padding: 10px;
                background-color: #f9fafa;
                border: 1px solid #e6e6e6;
                border-radius: 4px;
                overflow: auto;
                speak: literal-punctuation;
            }
            #exTab1 .tab-content {
                padding : 5px 15px;
            }

            #exTab2 h3 {
                padding : 5px 15px;
            }

            /* remove border radius for the tab */

            #exTab1 .nav-pills > li > a {
                border-radius: 0;
            }

            /* change border radius for the tab , apply corners on top*/

            #exTab3 .nav-pills > li > a {
                border-radius: 4px 4px 0 0 ;
            }

            #exTab3 .tab-content {
                padding : 5px 15px;
            }
