extends sidebarbase

block headstyle
    style.
        #exTab1 .tab-content {
            padding : 5px 15px;
        }

        #exTab2 h3 {
            padding : 5px 15px;
        }

        #exTab1 .nav-pills > li > a {
            border-radius: 4px 4px 0 0 ;
        }

block lastjavascript
    script.
        $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
            var target = $(e.target).attr("href").replace('#","'); // activated tab
            var id = '.language-' + target;
            var ext = $(e.target).attr("ext");
            var operation = $('#operation')[0].innerText;
            $(id).load(`https://raw.githubusercontent.com/strefethen/samples/master/#{path}/${operation}.${ext}`, function() {
               Prism.highlightAll();
            });
        });
