extends sidebarbase

block headstyle
    style.
        .item {
            font-size: 16px;
        }

block title
    title VMware vSphere REST API Documentation

block masthead
    <!-- Main jumbotron for a primary marketing message or call to action -->
    div(class="jumbotron")
        div(class="container")
            h1 vSphere REST API Reference
    div(style='clear: both')                

block maincontent
    div(class="row")
        div(class="col-xs-12 col-sm-4 col-md-4")
            h2 Components
        div(class="col-xs-6 col-md-8")
            each item in Object.keys(items)
                div(class='item')
                    - var i = items[item]
                    a(href=items[item] + '.html') #{items[item]}
    
block sidebar
    h4 vAPI Statistics
    table(class="table table-striped")
        tr
            th Stat
            th Count
        tr
            td GET
            td(style="text-align: right") #{stats.getOperationTotal}
        tr
            td DELETE
            td(style="text-align: right") #{stats.deleteOperationTotal}
        tr
            td PUT
            td(style="text-align: right") #{stats.putOperationTotal}
        tr
            td POST
            td(style="text-align: right") #{stats.postOperationTotal}
        tr 
            td PATCH
            td(style="text-align: right") #{stats.patchOperationTotal}
        tr
            td Unknown Verbs
            td(style="text-align: right") #{stats.unknownOperationVerbTotal}
        tr
            td Structures
            td(style="text-align: right") #{stats.structureTotal}
        tr
            td Enumerations
            td(style="text-align: right") #{stats.enumTotal}
        tr
            td 
                a(href=`/${root}/warnings.html`) Warnings
            td(style="text-align: right") #{stats.warnings.length}
        tr
            td
                a(href=`/${root}/internal.html`) Internal APIs
            td(style="text-align: right") #{stats.internal}
        tr
            td 
                strong Total APIs
            td(style="text-align: right") #{stats.apiTotal}